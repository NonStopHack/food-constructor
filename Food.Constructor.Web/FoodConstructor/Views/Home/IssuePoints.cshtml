@model IEnumerable<FoodConstructor.Models.IssuePoint>

@{
    ViewBag.Title = "IssuePoints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IssuePoints</h2>

<p>
    @Html.ActionLink("Create New", "EditIssuePoint")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditIssuePoint", new { issuePointId = item.Id }) |
            @Html.ActionLink("Delete", "DeleteIssuePoint", new { issuePointId = item.Id })
        </td>
    </tr>
}

</table>
